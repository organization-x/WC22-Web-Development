<script>
const rock_in = document.getElementById("r");
const paper_in = document.getElementById("p");
const scissors_in = document.getElementById("s");
const body = document.body;
var winner = document.getElementById("whoWon");

function compInput(){
  const select = Math.floor(Math.random()*3);
  switch(select){
    case 0:
      return 'r';
    case 1:
      return 'p';
    case 2:
      return 's';
  }
    
}


function winLose(input){
  const computer = compInput();
  const out = input+computer;
  let str = "";
  if(input == 's'){
    str += "Human: Scissors ";
  }else if(input == 'p'){
    str += "Human: Paper ";
  }else{
    str += "Human: Rock ";
  }

  if(computer == 's'){
    str += "Computer: Scissors ";
  }else if(computer == 'p'){
    str += "Computer: Paper ";
  }else{
    str += "Computer: Rock";
  }

  switch(out){
    case "rs":
    case "pr":
    case "sp":
      return "Win - " + str;
    case "sr":
    case "rp":
    case "ps":
      return "Lose - " + str;
    case "rr":
    case "pp":
    case "ss":
      return "Draw - " + str;
    
  }
  
  
}


  rock_in.addEventListener("click", function(){
    winner.textContent = winLose('r');
